{% extends 'registerbase.html.twig' %}

{% block head %}{% endblock %}
{% block title %}Hello RegisterController!
{% endblock %}


{% block body %}
	<style>
    body,
		html {
			margin: 0;
			padding: 0;
			height: 100%;
			background:#E6E6FA !important;
		}
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
        .textcolor{
            color:#000000;
        }
	</style>

	<div class="example-wrapper">

		<form name="Form1" method="post" action="/register" onsubmit="return dogrula()">

			<h1 class="text-center p-5">
				Kullanıcı Kaydı
			</h1>
			<div class="form-group py-3">
				<label for="exampleInputEmail1">Kullanıcı Adı</label>
				<input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Kullanıcı Adı giriniz">
				<small id="emailHelp" class="form-text text-muted">Bilgilerinizi kimse ile paylaşmayacağız.</small>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Şifre</label>
				<input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Şifrenizi Giriniz">
			</div>
			<button type="submit" class="text-center btn btn-primary px-5">Kaydol</button>

		</form>
	</div>

	<script type="text/javascript">
         function dogrula() {
             var email = document.forms["Form1"]["email"].value;
             var sifre = document.forms["Form1"]["password"].value; //["Form1"]["password"] formun adı ve inputun adı
                 if (sifre == null || sifre == "") {
                     alert("Lütfen Şifre Giriniz");
                     return false;
                  }
                  if (email == null || email == "") {
                     alert("Lütfen Email Giriniz");
                     return false;
                  }       
             }
	</script>

{% endblock %}
